@{
    var bgColor = Color switch
    {
        "orange" => "bg-orange-100 dark:bg-orange-900/30",
        "purple" => "bg-purple-100 dark:bg-purple-900/30",
        "blue" => "bg-blue-100 dark:bg-blue-900/30",
        "green" => "bg-green-100 dark:bg-green-900/30",
        "red" => "bg-red-100 dark:bg-red-900/30",
        _ => "bg-slate-100 dark:bg-slate-700"
    };
}

<div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-5">
    <div class="flex items-center gap-3">
        <div class="w-12 h-12 @bgColor rounded-xl flex items-center justify-center flex-shrink-0">
            <span class="text-2xl">@Icon</span>
        </div>
        <div>
            <p class="text-sm text-slate-500 dark:text-slate-400">@Title</p>
            <div class="flex items-baseline gap-1.5">
                <p class="text-2xl font-bold text-slate-800 dark:text-slate-100">@Value</p>
                @if (!string.IsNullOrEmpty(Subtitle))
                {
                    <span class="text-sm text-slate-400">@Subtitle</span>
                }
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string Value { get; set; } = "";
    [Parameter] public string Icon { get; set; } = "";
    [Parameter] public string Color { get; set; } = "slate";
    [Parameter] public string? Subtitle { get; set; }
}
