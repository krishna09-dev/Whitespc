@using whitespc.Models
@using Markdig

<div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 overflow-hidden animate-fade-in">
    <!-- Header -->
    <div class="px-6 py-4 border-b border-slate-100 dark:border-slate-700">
        <div class="flex items-start justify-between">
            <div class="flex-1">
                <div class="flex items-center gap-3 mb-2">
                    <h3 class="text-lg font-semibold text-slate-800 dark:text-slate-100">@Entry.Title</h3>
                    <span class="mood-@Entry.PrimaryMoodCategory.ToString().ToLower() px-2.5 py-0.5 rounded-full text-xs font-medium">
                        @Entry.PrimaryMoodEmoji @Entry.PrimaryMood
                    </span>
                </div>
                <div class="flex items-center gap-4 text-sm text-slate-500 dark:text-slate-400">
                    <span>@Entry.EntryDate.ToString("MMMM d, yyyy")</span>
                    <span>•</span>
                    <span>@Entry.WordCount words</span>
                    @if (Entry.SecondaryMood1.HasValue || Entry.SecondaryMood2.HasValue)
                    {
                        <span>•</span>
                        @if (Entry.SecondaryMood1.HasValue)
                        {
                            <span>@Entry.SecondaryMood1.Value.GetEmoji() @Entry.SecondaryMood1.Value</span>
                        }
                        @if (Entry.SecondaryMood2.HasValue)
                        {
                            <span>@Entry.SecondaryMood2.Value.GetEmoji() @Entry.SecondaryMood2.Value</span>
                        }
                    }
                </div>
            </div>
            
            @if (ShowActions)
            {
                <button @onclick="OnEdit" class="p-2 hover:bg-slate-100 dark:hover:bg-slate-700 rounded-lg transition-colors">
                    <svg class="w-5 h-5 text-slate-500 dark:text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                    </svg>
                </button>
            }
        </div>
        
        <!-- Tags -->
        @if (Entry.Tags.Any())
        {
            <div class="flex flex-wrap gap-2 mt-3">
                @foreach (var tag in Entry.Tags)
                {
                    <span class="px-2.5 py-0.5 bg-slate-100 dark:bg-slate-700 text-slate-600 dark:text-slate-300 rounded-full text-xs">
                        @tag.Name
                    </span>
                }
            </div>
        }
    </div>
    
    <!-- Content -->
    <div class="px-6 py-5">
        <div class="markdown-content prose prose-slate dark:prose-invert max-w-none">
            @((MarkupString)RenderMarkdown(Entry.Content))
        </div>
    </div>
    
    <!-- Footer -->
    <div class="px-6 py-3 bg-slate-50 dark:bg-slate-900/50 border-t border-slate-100 dark:border-slate-700">
        <div class="flex items-center justify-between text-xs text-slate-400">
            <span>Created @Entry.CreatedAt.ToString("MMM d, yyyy 'at' h:mm tt")</span>
            @if (Entry.UpdatedAt != Entry.CreatedAt)
            {
                <span>Last updated @Entry.UpdatedAt.ToString("MMM d, yyyy 'at' h:mm tt")</span>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public JournalEntry Entry { get; set; } = null!;
    [Parameter] public EventCallback OnEdit { get; set; }
    [Parameter] public bool ShowActions { get; set; } = false;

    private static string RenderMarkdown(string content)
    {
        if (string.IsNullOrWhiteSpace(content))
            return "";
            
        var pipeline = new MarkdownPipelineBuilder()
            .UseAdvancedExtensions()
            .Build();
            
        return Markdown.ToHtml(content, pipeline);
    }
}
